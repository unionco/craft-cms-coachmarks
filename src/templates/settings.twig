{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("franco\\coacher\\assetbundles\\coacher\\CoacherAsset") %}

{% set showCoachMarks = settings['showCoachMarks'] %}

{{ forms.lightswitchField({
        on: (showCoachMarks in settings),
        name: 'showCoachMarks',
        label: 'Show Coachmarks'|t('coacher'),
        instructions: 'This toggle will add/remove coachmarks from the Control Panel'|t('coacher'),
        id: 'showCoachMarks',
        value: showCoachMarks
    })
}}